<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/light_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/light_on_secondary</item>
        <!-- Background color-->
        <item name="backgroundColor">@color/light_background</item>
        <item name="colorOnBackground">@color/light_on_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_on_surface</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="radio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:textAppearance">@style/text_body</item>
        <item name="android:background">@drawable/radiobutton_background</item>
        <item name="android:paddingStart">@dimen/spacing_medium</item>
        <item name="android:paddingEnd">@dimen/spacing_medium</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@drawable/radiobutton_text_colors</item>
    </style>

    <style name="text_header" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text_title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="text_body" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/light_text_body</item>
    </style>
</resources>